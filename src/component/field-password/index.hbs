<div class="field field--password">
    <label for="{{name}}" class="field__label"> {{label}} </label>
    
    <div class="field__wrapper">
        <input oninput="{{action}}(this.name, this.value)" type="{{type}}" class="field__input validation" name="{{name}}" placeholder="{{placeholder}}">
        <span class="field__icon" onclick="fieldPassword.toggle(this)"></span>
    </div>
</div>